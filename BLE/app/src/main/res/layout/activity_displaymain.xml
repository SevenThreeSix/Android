<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorPrimary"
    tools:context="com.example.user.ble.DisplayMainActivity">

    <!--最上层放图片圆形按钮-->
    <RelativeLayout
        android:id="@+id/head_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ToggleButton
            android:id="@+id/button_alarm"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:background="@drawable/alarm_on"
            android:checked="true"
            android:scaleType="center"
            android:textOff=""
            android:textOn=""/>
       <!-- android:textOff=""
        android:textOn=""-->

        <Button
            android:id="@+id/button_record"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/button_alarm"
            android:background="@drawable/button_record" />

        <Button
            android:id="@+id/button_setting"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/button_record"
            android:background="@drawable/button_setting"/>

        <Button
            android:id="@+id/button_help"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/button_setting"
            android:background="@drawable/button_help" />

        <Button
            android:id="@+id/button_ble"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:background="@drawable/ble_disconnect"
             />
    </RelativeLayout>

      <include layout="@layout/activity_displaymain_content"
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
          android:layout_below="@+id/head_layout"
          android:layout_above="@+id/progressBarTimeLayout"
          android:layout_marginLeft="16dp"
          android:layout_marginRight="16dp"/>


    <Button
        android:id="@+id/button_start"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/progressBarTimeLayout"
        android:background="@drawable/button_start_record"/>

    <LinearLayout
        android:id="@+id/progressBarTimeLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/simplewaveform"
        android:orientation="horizontal"
        android:weightSum="10">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/png_timer"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="9dp"
            android:layout_weight="9">

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:id="@+id/progressBarTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="100"
                android:progress="100"
                android:progressDrawable="@drawable/progress_drawable_horizontal" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cover2_on_progress"
                android:layout_alignBottom="@+id/progressBarTime"
                android:layout_alignTop="@+id/progressBarTime"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

    </LinearLayout>

<!--    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/progressBarTime"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/simplewaveform"
        android:max="100"
        android:progress="100"
        android:progressDrawable="@drawable/progress_drawable_horizontal" />-->


    <com.example.user.ble.SimpleWaveform
        android:id="@+id/simplewaveform"
        android:layout_width="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"/>




</RelativeLayout>

